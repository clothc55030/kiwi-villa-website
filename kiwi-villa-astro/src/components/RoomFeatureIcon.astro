---
export interface Props {
  icon: string;
  label: string;
  value: string;
}

const { icon, label, value } = Astro.props;
---

<div class="flex items-center gap-3">
  <div class="w-10 h-10 rounded-lg flex items-center justify-center" style="background-color: var(--color-primary-100);">
    <iconify-icon icon={icon} style="color: var(--color-primary-600);"></iconify-icon>
  </div>
  <div>
    <p class="text-sm text-gray-500">{label}</p>
    <p class="font-semibold">{value}</p>
  </div>
</div>