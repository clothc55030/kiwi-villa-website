---
export interface Props {
  icon: string;
  title: string;
  items: string[];
  delay?: number;
}

const { icon, title, items, delay = 0 } = Astro.props;
---

<div class="text-center group" data-animate data-animate-delay={delay}>
  <div class="w-16 h-16 bg-gray-100 rounded-full flex items-center justify-center mx-auto mb-4 group-hover:bg-primary-light transition-colors duration-300">
    <iconify-icon 
      icon={icon} 
      class="w-8 h-8 text-primary group-hover:text-white transition-colors duration-300"
      aria-label={title}
      role="img"
    ></iconify-icon>
  </div>
  <h3 class="text-lg font-semibold-cn mb-3 text-gray-800">{title}</h3>
  <ul class="text-sm text-gray-600 space-y-1">
    {items.map(item => (
      <li>{item}</li>
    ))}
  </ul>
</div>