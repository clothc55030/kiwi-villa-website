  <!-- Scroll-triggered animations -->
  <script>
    import { animate, scroll } from 'motion';
    import { initLazyLoad } from '../utils/lazyload';

    // 初始化懶加載
    document.addEventListener('DOMContentLoaded', () => {
      initLazyLoad();
    });

    // 檢測是否為行動裝置或用戶偏好減少動畫
    const isMobile = /iPhone|iPad|iPod|Android/i.test(navigator.userAgent);
    const prefersReducedMotion = window.matchMedia('(prefers-reduced-motion: reduce)').matches;
    const shouldReduceAnimations = isMobile || prefersReducedMotion;

    // 基礎滾動動畫
    const observerOptions = {
      threshold: 0.1,
      rootMargin: '0px 0px -50px 0px'
    };

    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          const target = entry.target;
          const delay = target.dataset.animateDelay || 0;
          
          setTimeout(() => {
            if (shouldReduceAnimations) {
              target.style.opacity = '1';
              target.style.transform = 'translateY(0)';
            } else {
              // 根據元素類型使用不同的動畫
              if (target.dataset.animateSlide) {
                animate(target, 
                  { opacity: [0, 1], x: [-30, 0] },
                  { duration: 0.8, easing: 'ease-out' }
                );
              } else if (target.classList.contains('lg:col-span-2')) {
                // 大卡片的特殊動畫
                animate(target, 
                  { opacity: [0, 1], scale: [0.95, 1] },
                  { duration: 0.8, easing: 'ease-out' }
                );
              } else {
                // 默認動畫
                animate(target, 
                  { opacity: [0, 1], y: [30, 0] },
                  { duration: 0.8, easing: 'ease-out' }
                );
              }
            }
          }, shouldReduceAnimations ? 0 : parseInt(delay));
          
          observer.unobserve(target);
        }
      });
    }, observerOptions);

    // Observe all elements with data-animate
    document.querySelectorAll('[data-animate]').forEach(el => {
      el.style.opacity = '0';
      observer.observe(el);
    });
    
    // 特殊的視差滾動效果（僅桌面版）
    if (!shouldReduceAnimations) {
      // 設計理念區塊的標籤動畫
      const tags = document.querySelectorAll('.flex.flex-wrap.gap-3 span');
      tags.forEach((tag, index) => {
        scroll(
          animate(tag, { 
            transform: ['translateY(0px)', 'translateY(-10px)', 'translateY(0px)'] 
          }, { 
            duration: 2,
            repeat: Infinity,
            delay: index * 0.2
          })
        );
      });
      
      // 環境畫廊的懸浮效果增強
      const galleryCards = document.querySelectorAll('.grid.lg\\:grid-cols-2.gap-8 .group');
      galleryCards.forEach(card => {
        card.addEventListener('mouseenter', () => {
          const img = card.querySelector('img');
          animate(img, { scale: 1.1 }, { duration: 0.6, easing: 'ease-out' });
        });
        
        card.addEventListener('mouseleave', () => {
          const img = card.querySelector('img');
          animate(img, { scale: 1 }, { duration: 0.6, easing: 'ease-in-out' });
        });
      });
    }
  </script>
