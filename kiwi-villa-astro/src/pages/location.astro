---
import Layout from '../layouts/Layout.astro';

const pageTitle = '地理資訊 - 澎湖期遇度假會館 | 絕佳位置，交通便捷';
const pageDescription = '澎湖期遇度假會館絕佳地理位置，距離機場12分鐘、碼頭9分鐘車程，靠近市區商圈與澎科大，外送覆蓋範圍內，交通便捷生活機能佳。';

const svgPatternBlack = "data:image/svg+xml,%3Csvg width='60' height='60' viewBox='0 0 60 60' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='none' fill-rule='evenodd'%3E%3Cg fill='%23000000' fill-opacity='0.4'%3E%3Cpath d='M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z'/%3E%3C/g%3E%3C/g%3E%3C/svg%3E";

// 結構化數據 - 麵包屑
const breadcrumbStructuredData = {
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": [{
    "@type": "ListItem",
    "position": 1,
    "name": "首頁",
    "item": "https://www.kiwi-villa.com"
  },{
    "@type": "ListItem",
    "position": 2,
    "name": "地理資訊",
    "item": "https://www.kiwi-villa.com/location"
  }]
};

// 結構化數據 - 地點
const placeStructuredData = {
  "@context": "https://schema.org",
  "@type": "TouristDestination",
  "name": "澎湖期遇度假會館",
  "description": pageDescription,
  "address": {
    "@type": "PostalAddress",
    "streetAddress": "澎湖縣馬公市西衛里347號",
    "addressLocality": "馬公市",
    "addressRegion": "澎湖縣",
    "postalCode": "880",
    "addressCountry": "TW"
  },
  "geo": {
    "@type": "GeoCoordinates",
    "latitude": "23.5869",
    "longitude": "119.5818"
  },
  "publicAccess": true,
  "isAccessibleForFree": false,
  "touristType": ["Family", "Couple", "Adventure"],
  "availableLanguage": ["zh-TW", "en"],
